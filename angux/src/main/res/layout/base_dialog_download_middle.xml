<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout"
    style="@style/an_match_wrap"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivTopImage"
        style="@style/an_match_wrap"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:src="@drawable/image_small_circle" />

    <LinearLayout
        android:id="@+id/llMiddle"
        style="@style/an_match_wrap"
        android:layout_below="@id/ivTopImage"
        android:background="@drawable/picture_dialog_shadow"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tvDeep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="这里显示标题（提示）"
            android:textColor="#FE2952"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvText"
            style="@style/an_wrap_wrap"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="更新内容"
            android:textColor="#262626"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvLight"
            style="@style/an_match_wrap"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="6"
            android:scrollbars="vertical"
            android:text="有新的软件更新，请更新。*下载成功后apk文件在an/apk中。如果没有自动安装请手动安装"
            android:textColor="#8C8C8C"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvConfirm"
            style="@style/an_match_wrap"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:background="@color/ColorBlueviolet"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="立即更新"
            android:textColor="@color/an_color_white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnConfirm"
            style="@style/an_match_wrap"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:background="@color/ColorBlueviolet"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="立即更新"
            android:textColor="@color/an_color_white"
            android:textSize="15sp"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivCancle"
        style="@style/an_wrap_wrap"
        android:layout_below="@id/llMiddle"
        android:layout_centerHorizontal="true"
        android:padding="12dp"
        android:src="@drawable/in_selector_clear" />

</RelativeLayout>