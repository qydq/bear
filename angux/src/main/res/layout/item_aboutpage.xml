    <LinearLayout style="@style/an_wrap_wrap.V">

        <LinearLayout style="@style/an_wrap_wrap.H">

            <ImageView
                android:id="@+id/image"
                style="@style/an_wrap_wrap" />

            <TextView
                android:id="@+id/description"
                style="@style/an_wrap_wrap" />
        </LinearLayout>

        <View style="@style/an_style_line" />

        <LinearLayout
            android:id="@+id/about_providers"
            style="@style/an_wrap_wrap.V"
            android:padding="0dp" />
    </LinearLayout>
</ScrollView>