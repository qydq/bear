<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout"
    android:layout_width="200dp"
    android:layout_height="180dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/in_shape_dialog">

    <ImageView
        android:id="@+id/ivCancle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/in_selector_clear" />

    <TextView
        android:id="@+id/tvDeep"
        style="@style/an_wrap_wrap.TextDeep"
        android:layout_below="@+id/ivCancle"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/an_dimen_margin"
        android:gravity="center"
        android:text="嘿Bro～发现新版本!" />


    <View
        android:id="@+id/anViewLine"
        android:layout_width="match_parent"
        android:layout_height="1.1dp"
        android:layout_below="@+id/tvDeep"
        android:alpha="0.8"
        android:background="@drawable/in_selector_shadow" />

    <TextView
        android:id="@+id/tvText"
        style="@style/an_wrap_wrap.Text"
        android:layout_below="@+id/anViewLine"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/an_dimen_margin_small"
        android:layout_marginTop="@dimen/an_dimen_margin"
        android:layout_marginRight="@dimen/an_dimen_margin_small"
        android:gravity="center"
        android:text="有新的软件更新，请更新。*下载成功后apk文件在an/apk中。如果没有自动安装请手动安装" />

    <ImageView
        android:id="@+id/ivPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvConfirm"
        android:layout_below="@+id/anViewLine" />

    <ProgressBar
        android:id="@+id/innerProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvText"
        android:layout_marginTop="@dimen/an_dimen_margin_small" />

    <TextView
        android:id="@+id/tvConfirm"
        style="@style/an_selector_layout.Btn"
        android:layout_above="@+id/anViewLineBotton"
        android:layout_marginLeft="@dimen/an_dimen_margin_ssmall"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/an_dimen_margin"
        android:layout_marginRight="@dimen/an_dimen_margin_ssmall"
        android:layout_marginBottom="@dimen/an_dimen_margin_ssmall"
        android:background="@drawable/in_selector_stroke"
        android:gravity="center"
        android:paddingTop="@dimen/an_dimen_margin_ssmall"
        android:paddingBottom="@dimen/an_dimen_margin_ssmall"
        android:text="下载"
        android:textSize="@dimen/an_dimen_level2" />

    <View
        android:id="@+id/anViewLineBotton"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.8" />

</RelativeLayout>