<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    style="@style/an_match_match.V"
    android:background="?anBackground"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:id="@+id/patchView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/AppHeadHeight"
        android:background="@color/ColorTransparent"
        android:visibility="gone" />

    <com.sunsta.bear.layout.INAShrinkScrollView
        style="@style/an_match_match"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout style="@style/an_match_match">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                style="@style/an_match_match"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <com.sunsta.bear.layout.INABadLayout
                android:id="@+id/inaBadlayout"
                style="@style/an_match_match"
                android:visibility="gone" />
        </RelativeLayout>
    </com.sunsta.bear.layout.INAShrinkScrollView>
</LinearLayout>